{
	"easycom": {
			"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/home/home",
			"style": {
				"navigationBarTitleText": "",
				"enablePullDownRefresh": true,
				"navigationStyle": "custom",
				"backgroundTextStyle": "light",
				//取消本页面的导航栏
				"app-plus": {
					"animationType": "fade-in",
					"background": "transparent",
					"backgroundColor": "rgba(0,0,0,0)",
					"webviewBGTransparent": true,
					"mask": "none",
					"opacity": 1,
					"popGesture": "none"
				}
			}
		},
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "uni-app"
			}
		},
		{
			"path": "pages/my/my",
			"style": {
				"enablePullDownRefresh": true,
				"navigationBarTitleText": "",
				"navigationStyle": "custom",
				"backgroundTextStyle": "light",
				"app-plus": {
					"animationType": "fade-in",
					"background": "transparent",
					"backgroundColor": "rgba(0,0,0,0)",
					"webviewBGTransparent": true,
					"mask": "none",
					"opacity": 1,
					"popGesture": "none",
					"bounce": "none"
				}
			}
		},
		{
			"path": "pages/login/phoneLogin",
			"style": {
				"navigationBarTitleText": "",
				"navigationStyle": "custom",
				"backgroundTextStyle": "light",
				"app-plus": {
					"animationType": "fade-in",
					"background": "transparent",
					"backgroundColor": "rgba(0,0,0,0)",
					"webviewBGTransparent": true,
					"mask": "none",
					"opacity": 1,
					"popGesture": "none",
					"bounce": "none"
				}
			}
		},
		{
			"path": "pages/details/details",
			"style": {
				"navigationBarTitleText": "详情",
				"enablePullDownRefresh": false,
				"navigationStyle": "custom",
				//取消本页面的导航栏
				"app-plus": {
					"animationType": "fade-in",
					// 设置fade-in淡入动画，为最合理的动画类
					"background": "transparent",
					// 背景透明
					"backgroundColor": "rgba(255,255,255)",
					// 背景透明
					"webviewBGTransparent": true,
					"mask": "none",
					"opacity": 1,
					"popGesture": "none"
					// 关闭IOS屏幕左边滑动关闭当前页面的功能
				}
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#2f2f2f",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
				"pagePath": "pages/home/home",
				"iconPath": "static/tabbar/index_icon.png",
				"selectedIconPath": "static/tabbar/index_icon_select.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/my/my",
				"iconPath": "static/tabbar/my_icon.png",
				"selectedIconPath": "static/tabbar/my_icon_select.png",
				"text": "我的"
			}
		]
	},
	"uniIdRouter": {}
}
